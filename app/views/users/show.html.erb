<h1 class="text-2xl font-bold mb-4"> Borrowed Books</h1>

<% if @borrowed_books.any? %>
  <ul class="space-y-4">
    <% @borrowed_books.each do |borrowing| %>
      <li class="p-4 bg-white rounded-lg shadow-md">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-lg font-semibold"><%= borrowing.book.title %></p>
            <p class="text-sm text-gray-600">Due: <%= borrowing.due_date %></p>
          </div>
          <%= button_to "Return", borrowing_path(borrowing), method: :delete, class: "px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600" %>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-gray-600">You have no borrowed books.</p>
<% end %>

<%= link_to "Back to Books", books_path, class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>