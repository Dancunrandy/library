<h1 class="text-2xl font-bold mb-4">Sign Up</h1>

<%= form_with model: @user, class: "space-y-4" do |form| %>
  <div>
    <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>
  <div>
    <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
    <%= form.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>
  <div>
    <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
    <%= form.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>
  <div>
    <%= form.submit "Sign Up", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
  </div>
<% end %>

<%= link_to "Already have an account? Login", login_path, class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>