<!DOCTYPE html>
<html>
<head>
  <title>Book Library</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body class="bg-gray-100">
  <nav class="bg-blue-600 p-4 text-white shadow-md">
    <div class="container mx-auto flex justify-between items-center">
      <!-- Book Library Title -->
      <%= link_to "Book Library", root_path, class: "text-2xl font-bold tracking-wide hover:underline" %>

      <!-- Navigation Links -->
      <div class="flex items-center gap-6">
        <% if current_user %>
          <%= link_to "Profile", user_path(current_user), class: "bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600" %>
          <%= button_to "Logout", logout_path, method: :delete, class: "bg-red-500 px-4 py-2 rounded-md hover:bg-red-600" %>
        <% else %>
          <%= link_to "Login", login_path, class: "bg-green-500 text-white px-4 py-2 rounded-md hover:underline" %>
          <%= link_to "Sign Up", new_user_path, class: "bg-green-500 px-4 py-2 rounded-md hover:bg-green-600 inline-flex items-center" %>
        <% end %>
      </div>
    </div>
  </nav>

  <main class="container mx-auto mt-8 px-4">
    <%= yield %>
  </main>
</body>
</html>
